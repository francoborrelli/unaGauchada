{% for achievement in achievements[:achievements|length - 1 ] %}
    <tr>
        <td data-toggle="popover" data-placement="bottom">
            <div class="form-group">
                <input placeholder="Introduzca el nombre del Logro" class="campoNombre" type="text" value="{{ achievement.name }}">
            </div>
        </td>
        <td class="text-center" data-toggle="popover" data-placement="bottom" >
            <div class="form-group">
                <input placeholder="Introduzca el valor mÃ¡ximo" type="number" class="campoRango" value="{{ achievement.max }}">
            </div>
        </td>
        <td class="text-center">
            <button type="button" class="btn btn-secondary btn-icon"></button>
            <input type="text" class="icono campoIcono" value="{{ achievement.iconName }}" spellcheck="false">
        </td>
        <td class="text-center">
            <div class="btn-group editable" role="group">
                <button type="button" class=" btn btn-info btn-sm table-up">
                    <i class="fa fa-arrow-up" aria-hidden="true"></i>
                </button>
                <button type="button" class="btn btn-info btn-sm table-down">
                    <i class="fa fa-arrow-down" aria-hidden="true"></i>
                </button>
                <button type="button" class="btn btn-success btn-sm submit">
                    <i class="fa fa-check" aria-hidden="true"></i>
                </button>
                <button type="reset" class="editCancel btn btn-danger btn-sm">
                    <i class="fa fa-times" aria-hidden="true"></i>
                </button>
            </div>
            <div class="btn-group botones" role="group">
                <button type="button" class="edit btn btn-primary btn-sm">
                    <i class="fa fa-pencil" aria-hidden="true"></i>
                </button>
                <button type="button" class="btn btn-danger btn-sm eliminar">
                    <i class="fa fa-trash" aria-hidden="true"></i>
                </button>
            </div>
        </td>
    </tr>
{% endfor %}
