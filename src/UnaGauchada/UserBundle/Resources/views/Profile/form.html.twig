<div class="row">
    <div class="col col-md-3 profilePic">
        <div class="card">
            <div>
                <img id="img-upload" src="{{ path('user_photo', {'id': app.user.id}) }}"
                     class="card-img-bottom rounded">
            </div>
            <div class="card-block">
                <small><i class="fa fa-thumbs-o-up" aria-hidden="true"></i> {{ achievement_service.getFor(app.user) }}
                </small>
                <br>
                <small><i class="fa fa-line-chart"
                          aria-hidden="true"></i> {% if app.user.score == 1 %} 1 punto {% else %} {{ app.user.score }} puntos {% endif %}
                </small>
            </div>
        </div>
    </div>
    <div class="col-md-8 container editProfile ">
        <div class="btn-group pull-right" role="group">
            <a href="{{ path('user_profile_edit_show') }}" type="button" class="btn btn-primary" data-toggle="tooltip"
               data-placement="left" title="Editar datos">
                <i class="fa fa-pencil" aria-hidden="true"></i>
            </a>
        </div>
        <h1>{{ app.user.name }} {{ app.user.lastname }}</h1>
        <hr>
        <div class="row">
            <div class="col-md-12 personal-info">
                <div class="form-group">
                    <label class="col-lg-5 control-label">Email:</label>
                    <div class="col-lg-11 input-group">
                    {#     <span class="input-group-addon"><i class="fa fa-envelope" aria-hidden="true"></i></span> #}
                        <input class="form-control" type="text" value="{{ app.user.email }}" readonly>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-5 control-label">Fecha de Nacimiento:</label>
                    <div class="col-lg-11 input-group">
                     {#    <span class="input-group-addon"><i class="fa fa-birthday-cake" aria-hidden="true"></i></span> #}
                        <input class="form-control" type="text" value="{{ app.user.birthday|date("d/m/Y") }}" readonly>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-5 control-label">Tel√©fono:</label>
                    <div class="col-lg-11 input-group">
                      {#   <span class="input-group-addon"><i class="fa fa-phone" aria-hidden="true"></i></span>  #}
                        <input class="form-control" type="tel" value="{{ app.user.phone }}" readonly="">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-5 control-label">Creditos disponibles:</label>
                    <div class="col-lg-11 input-group">
                       {#  <span class="input-group-addon"><i class="fa fa-shopping-cart" aria-hidden="true"></i></span> #}
                        <input class="form-control" type="tel" value="{{ app.user.credits }}" readonly="">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
