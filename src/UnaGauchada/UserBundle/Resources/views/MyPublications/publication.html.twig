<li class="list-group-item" data-status="{% if publication.active %}active{% elseif publication.closed %}closed{% else %}cancelled{% endif %}">
    <div class="row">
        <div class="col-md-5">
            <img src="{{ path('publication_image', {'id': publication.id}) }}" alt="Lorem ipsum" class="w-100 rounded">
        </div>
        <div class="col-md-7">
            <div class="card-block">
                <h4 class="card-title">{{ publication.title }}</h4>
                {% if publication.active %} <p class="text-success">Activa</p> {% elseif publication.closed %} <p
                        class="text-warning">Cerrada</p> {% else %} <p class="text-danger">Cancelada</p> {% endif %}

                <small>
                    <i class="fa fa-calendar-o" aria-hidden="true"></i>&nbsp;
                    <span>{{ publication.limitDate | date('d/m/Y') }}</span>
                    <br>
                    <i class="fa fa-map-marker"
                       aria-hidden="true"></i>&nbsp;<span>{{ publication.department.name | title }}</span>
                    <br>
                    <i class="fa fa-tag" aria-hidden="true"></i>&nbsp;<span>{{ publication.category }}</span>
                </small>
            </div>

            {% if not publication.closed %}
                <a class="btn btn-primary detalle" href="{{ path('publication_show', {'id': publication.id}) }}">Ver Publicaci√≥n</a></div>
            {% elseif publication.hasChosen and not publication.expired %}
                <a class="btn btn-primary detalle" href="{{ path('submissions_show', {'id': publication.id}) }}">Ver elegido</a></div>
            {% elseif publication.hasChosen and publication.expired and not publication.chosen.hasScore %}
                <a class="btn btn-primary detalle" href="{{ path('submissions_show', {'id': publication.id}) }}">Calificar Postulado</a></div>
            {% endif %}
    </div>
</li>