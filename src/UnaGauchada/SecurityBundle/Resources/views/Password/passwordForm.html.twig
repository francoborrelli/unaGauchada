{% embed 'utils/card.html.twig' with {'title': 'Cambiar contraseña'} %} 

{% block content %}
<form id="passwordForm" method="post" action="{{ path('user_password_change') }}">
    <div class="form-group"><input minlength="6" type="password" id="_newPass" name="password" class="form-control" placeholder="Ingrese su nueva contraseña" required></input></div>
    <div class="form-group"><input type="password" id="_confirmPass" name="_confirmPass" class="form-control" placeholder="Re-ingrese su nueva contraseña" required></div>
    <button class="form-group btn btn-lg btn-primary btn-block" type="submit">Cambiar</button>
</form>
{% endblock %} 

{% endembed %}