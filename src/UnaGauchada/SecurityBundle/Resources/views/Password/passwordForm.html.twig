{% embed 'utils/card.html.twig' with {'title': 'Cambiar contrase単a'} %}

    {% block content %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger text-center" role="alert">
                {{ message }}
            </div>
        {% endfor %}

        <form id="passwordForm" method="post" action="{{ path('user_password_change') }}">
            <div class="form-group"><input minlength="6" type="password" id="_yourPass" name="old_password"
                                           class="form-control" placeholder="Ingrese su contrase単a actual" required>
            </div>
            <div class="form-group"><input minlength="6" type="password" id="_newPass" name="password"
                                           class="form-control" placeholder="Ingrese su nueva contrase単a" required>
            </div>
            <div class="form-group"><input type="password" id="_confirmPass" name="_confirmPass" class="form-control"
                                           placeholder="Re-ingrese su nueva contrase単a" required></div>
            <a href="{{ path('user_profile') }}" class="form-group btn btn-outline-primary"
               style="width: 49%">Cancelar</a>
            <button class="form-group btn btn-primary" type="submit" style="width: 49%">Cambiar</button>
        </form>
    {% endblock %}

{% endembed %}