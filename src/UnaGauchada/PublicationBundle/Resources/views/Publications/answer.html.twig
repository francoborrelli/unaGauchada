{% macro item(name, profileImg, text) %}

<div class="media mt-3">
            <img class="comment d-flex align-self-start mr-3 rounded" src="{{ profileImg }}"
                alt="Profile Image">
            <div class="media-body">
                <h5 class="mt-0">{{ name }}</h5>
                <p>{{ text }}</p>
            </div>
        </div>

{% endmacro %}