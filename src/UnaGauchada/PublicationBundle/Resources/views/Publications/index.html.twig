{% extends 'ClientBundle::base.html.twig' %}

{% block body %}

    <div class="container">

        <div class="card-columns publication-list">

            {% for publication in publications %}
                <div class="card">
                    <img class="card-img-top" src="{{ asset(publication.description)}}" alt="Card image cap">
                    <div class="card-block">
                        <h4 class="card-title">{{ publication.title }}</h4>
                        <p class="card-text">
                            <a class="btn btn-primary" href="#">Descripci√≥n</a>
                        </p>
                    </div>
                    <div class="card-footer">
                        <small class="text-muted">{{ publication.limitDate | date('d/m/Y') }}</small>
                    </div>
                </div>
            {% endfor %}

        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/publicationsView.js')}}"></script>
{% endblock %}