{% macro comment(name, id, publication) %}

<div id="{{id}}" class="escribirComentario" >
    <li class="list-group-item header">
        <h6>{{name}}</h6>
    </li>
    <li class="list-group-item" style="background-color: #FAFAFA;">
        <div class="media">
            <img class="comment d-flex mr-3 rounded" src=" {{ path('user_photo', {'id': app.user.id}) }}" alt="imagen del usuario">
            <div class="media-body">
            <form id="{{"form" ~ id}}" class="commentForm" method="post" action="{{ path('comment_create', {'id': publication.id}) }}">
                <h5 class="mt-0">  {{ app.user.name }} {{ app.user.lastName }}
                </h5>
                <textarea name="message" id="message" placeholder="Escriba aquÃ­ su comentario..."></textarea>
                <div class="pull-right comment" role="group">
                    <button type="button" id="cancelComment" data-target="writecomment" class="cancelComment btn btn-sm btn-secundary"> Cancelar </button>
                    <button type="submit" class="btn btn-sm btn-primary">Enviar</button>
                </div>
            </form>
            </div>
        </div>
    </li>
</div>

{% endmacro comment %} 
