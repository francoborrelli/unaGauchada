<div class="col-md-8 container search ">
    <div class="card">
        <div class="card-header">
            <a class="btn btn-primary detalle" data-toggle="tooltip" data-placement="left" title="Volver al inicio"
               href="{{ path('publication_page') }}"><i class="fa fa-reply" aria-hidden="true"></i></a>
            <h1>Resultados de busqueda</h1>
            <h2 class="lead"><strong class="text-primary">{{ amount }}</strong>
                {% if publications|length == 1 %}
                publicaci√≥n fue encontrada.
                {% else %}
                publicaciones fueron encontradas.</h2>
            {% endif %}
        </div>
        <div>
            <ul class="list-group list-group-flush">
                {% for publication in publications %}
                    {% include 'PublicationBundle:Search:searchResult.html.twig' %}
                {% endfor %}
            </ul>
        </div>
    </div>
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <li class="page-item {% if page == 1 %} disabled {% endif %}">
                <a class="page-link" href="{{ path('publication_search_page', {'page': page - 1}) }}" tabindex="-1">Ant</a>
            </li>
            {% for i in 1..pages %}
                <li class="page-item {% if i == page %} active {% endif %}">
                    <a class="page-link" href="{{ path('publication_search_page', {'page': i}) }}">{{ i }}</a>
                </li>
            {% endfor %}
            <li class="page-item {% if page == pages %} disabled {% endif %}">
                <a class="page-link" href="{{ path('publication_search_page', {'page': page + 1}) }}">Sig</a>
            </li>
        </ul>
    </nav>

</div>